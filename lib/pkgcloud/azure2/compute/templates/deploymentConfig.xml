<Deployment xmlns="http://schemas.microsoft.com/windowsazure" xmlns:i="http://www.w3.org/2001/XMLSchema-instance">
   <Name><%= NAME %></Name>
   <DeploymentSlot>Production</DeploymentSlot>
   <Label><%= NAME %></Label>
   <RoleList>
      <Role>
         <RoleName><%= NAME %></RoleName>
         <RoleType>PersistentVMRole</RoleType>
         <ConfigurationSets>
             <%= OS_CONFIG_SET %>
             <%= NETWORK_CONFIG_SET %>
       </ConfigurationSets>
         <OSVirtualHardDisk>
            <DiskLabel>pkgcloud os disk</DiskLabel>
            <MediaLink>OS_IMAGE_MEDIALINK</MediaLink>
            <SourceImageName><%= OS_SOURCE_IMAGE_NAME %></SourceImageName>
         </OSVirtualHardDisk>
         <RoleSize><%= ROLESIZE %></RoleSize>
      </Role>
    </RoleList>
    <VirtualNetworkName></VirtualNetworkName>
</Deployment>